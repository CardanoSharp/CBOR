  <ItemGroup>
    <PackageReference Include='PeterO.Numbers' Version='1.4.3'/>
  <PackageReference Include='StyleCop.Analyzers' PrivateAssets='All' Version='1.1.118'/><PackageReference Include='Microsoft.CodeAnalysis.FxCopAnalyzers' PrivateAssets='All' Version='2.9.3'/><AdditionalFiles Include='stylecop.json'/><AdditionalFiles Include='rules.ruleset'/></ItemGroup>
